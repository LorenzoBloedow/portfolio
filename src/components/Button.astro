---
import type { ReactNode } from "react";
interface Props {
    text: string;
    icon?: ReactNode;
    color?: "primary" | "secondary" | "accent";
    shadow?: boolean;
    ghost?: boolean;
    classId?: string;
    id?: string;
}
const { text, icon, color, shadow, ghost, classId = "", id } = Astro.props;
---


<button
id={id}
class={
    "w-36 h-8 rounded-md px-3 py-2 font-bold flex justify-center gap-3 " +
    "items-center text-xs tracking-wider text-white " +
    "md:text-lg md:w-40 md:h-10" + " " + classId
}
style={{
    backgroundColor: `var(--${color})`,
    filter: shadow ? "drop-shadow(3px 3px 2px var(--accent));" : ""
}}
>
    {icon} {text}
</button>