---
    interface Props {
        level?: 1 | 2 | 3 | 4 | 5 | 6;
    }
    const { level } = Astro.props;
---

{
    (typeof level === "undefined" || level === 1) ?
    <h1
    class="text-5xl md:text-6xl lg:text-7xl text-center font-bold md:mb-5"
    >
        <slot />
    </h1>
    :
    (level === 2) ?
    <h2
    class="text-4xl md:text-5xl lg:text-6xl text-center font-bold md:mb-4"
    >
        <slot />
    </h2>
    :
    (level === 3) ?
    <h3
    class="text-2xl md:text-3xl lg:text-4xl text-center font-bold mb-5"
    >
        <slot />
    </h3>
    :
    (level === 4) ?
    <h4
    class="text-xl md:text-2xl lg:text-3xl text-center font-bold mb-4"
    >
        <slot />
    </h4>
    :
    (level === 5) ?
    <h5
    class="text-lg md:text-xl lg:text-2xl text-center font-bold mb-4"
    >
        <slot />
    </h5>
    :
    <h6
    class="md:text-lg lg:text-xl text-center font-bold mb-3"
    >
        <slot />
    </h6>
}